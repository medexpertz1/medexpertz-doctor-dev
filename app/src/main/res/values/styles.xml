<resources>
	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="cardBackgroundColor">@color/white</item>
		<item name="android:windowBackground">@color/white</item>
		<item name="android:windowActionBarOverlay">true</item>
		<item name="android:textViewStyle">@style/ProximaTextViewStyle</item>
		<item name="buttonStyle">@style/ProximaButtonStyle</item>
	</style>

	<style name="AppTheme.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="AppTheme.NoActionBar.Translucent">
		<item name="android:windowTranslucentStatus">true</item>
	</style>

	<style name="AppTheme.Fullscreen">
		<item name="windowNoTitle">true</item>
		<item name="windowActionBar">false</item>
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>

	<style name="ProximaTextViewStyle" parent="android:Widget.TextView">
		<item name="android:fontFamily">@font/proxima_nova_regular</item>
		<item name="android:includeFontPadding">false</item>
	</style>

	<style name="TitleTextAppearance">
		<item name="android:color">@color/white</item>
		<item name="android:textSize">16sp</item>
		<item name="android:fontFamily">@font/proxima_nova_bold</item>
	</style>

	<style name="SubtitleTextAppearance">
		<item name="android:color">@color/white</item>
		<item name="android:textSize">14sp</item>
		<item name="android:fontFamily">@font/proxima_nova_regular</item>
	</style>

	<style name="ProximaButtonStyle" parent="android:Widget.Holo.Button">
		<item name="android:fontFamily">@font/proxima_nova_regular</item>
		<item name="android:includeFontPadding">false</item>
	</style>
	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
	<style name="TabTextAppearance">
		<item name="android:fontFamily">@font/proxima_nova_semi_bold</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textAllCaps">false</item>
	</style>

	<style name="SearchView">
		<item name="floatingSearch_viewSearchInputTextColor">#545454</item>
		<item name="floatingSearch_viewSuggestionItemTextColor">#242424</item>
		<item name="floatingSearch_hintTextColor">#545454</item>
		<item name="floatingSearch_dividerColor">#7F000000</item>
	</style>

	<style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
		<item name="colorAccent">@color/colorAccent</item>
	</style>
</resources>
